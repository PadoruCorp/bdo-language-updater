<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BDOLanguageUpdater.WPF.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="BDOLanguageUpdater.WPF.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="BDO Language Updater"
        Width="700"
        Height="400"
        Icon="/Assets/icon.ico">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl>
		
        <TabItem Header="General" >
            <StackPanel DataContext="{Binding GeneralTabViewModel}" Orientation="Horizontal" Spacing="10" Margin="10">
                <TextBlock Text="BDO Path:"  TextAlignment="Right" VerticalAlignment="Top"/>
                <TextBox Text="{Binding BDOPath}"  Watermark="{Binding BDOPath}" Width="200" VerticalAlignment="Top"/>
                <Button Content="Browse" Click="Browse" VerticalAlignment="Top"/>
            </StackPanel>
        </TabItem>

        <TabItem Header="Advanced" >
            <StackPanel DataContext="{Binding AdvancedTabViewModel}" Spacing="10">
                <TextBox Text="{Binding FileChangedCheckInterval}" />
            </StackPanel>
        </TabItem>
		
    </TabControl>

</Window>
